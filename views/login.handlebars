<html>
	<link href ="/css/general.css" rel="stylesheet">
	<link href ="/css/login.css" rel="stylesheet">
	<script defer src = "/js/fontawesome-all.js"></script>
	<div class = "container">
	<head>
		<a href ="./index"><i class ="fa fa-home fa-2x"></i></a>
	
				<title>FocusFriend</title>
		<center>
			<h1>Sign Up or Log In</h1>
	</head>
	<body>
		<br>
		<h4>Sign in to Facebook</h4>
		<script>
			console.log(sessionStorage.getItem("logged"));
			if (sessionStorage.getItem("logged") == true) {
				$(".facebookLogin").hide();
				$(".signingIn").hide();
				$(".signingUp").hide();
			}
		</script>
		<p class="facebookLogin">
			<br>
				<fb:login-button scope ="public_profile,email" onlogin ="checkLoginState();" size="xlarge">
				</fb:login-button>
			</p>
		
		<div class ="signingIn">
			<h4>Sign in with email:</h4>
			<button id = "signIn">Sign In</button>
			<script type="text/javascript">
				document.getElementById("signIn").onclick = function () {
					location.href = "./newAccount";
				};
			</script>
		</div>
		<br>
		<div class = "signingUp">
			<h4>No account?</h4>
			<button id = "signUp">Sign Up</button>
			<script type="text/javascript">
				document.getElementById("signUp").onclick = function () {
					location.href = "./newAccount";
				};
			</script>
		</div>
		<br>

	<script src ="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	{{> facebook}}
	<script src="/js/facebook.js"></script>
	</body>
	</center>
	</div>
</html>
