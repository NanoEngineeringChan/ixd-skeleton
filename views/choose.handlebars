<html>
	<link href="/css/general.css" rel="stylesheet">
	<link href ="/css/choose.css" rel="stylesheet">
	<script defer src = "/js/fontawesome-all.js"></script>
	<script src="https://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>

	<head>
	
		<title>FocusFriend</title>

	</head>

	

<body>
	<div class = "container">
		<center>
			<h1>Choose your Spirit Animal:</h1>
			{{#each animals}}
				<div class = "animal">
					<h3>{{species}}</h3>

					<button type ="submit" id = "{{id}}" value = "{{id}}" onclick ="store({{id}});"><img src = "{{imageURL}}" alt = "{{species}}"></button>


					<p>{{description}}</p>
					<h4>{{donate}}</h4>
					<br>
					<br>
				</div>
			{{/each}}

			<script type = "text/javascript">
				function store(i) {
					console.log(i);
					var input = document.getElementById(i);
					localStorage.setItem("animalID", input.value);
					location.href = "./nameFriend";

				}
			</script>
		</center>
</body>
</html>
